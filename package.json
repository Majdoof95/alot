{
    "name": "alot",
    "description": "Collection methods with sync and async features",
    "author": {
        "name": "Alexander Kit",
        "email": "alex.kit@atmajs.com"
    },
    "version": "0.2.91",
    "main": "./lib/alot.js",
    "types": "./lib/alot.d.ts",
    "repository": {
        "type": "git",
        "url": "git://github.com/atmajs/alot.git"
    },
    "devDependencies": {
        "@types/node": "^12.12.6",
        "@types/sinon": "^2.3.3",
        "app-bundler": "0.0.75",
        "atma": "^0.12.9",
        "atma-loader-ts": "^1.1.11",
        "dts-bundle": "^0.7.3",
        "typedoc": "^0.21.4"
    },
    "scripts": {
        "test": "atma test",
        "build": "npm run build-bundle && npm run build-dts && npm run build-typedoc",
        "build-bundle": "app-bundler",
        "build-dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "build-typedoc": "typedoc --tsconfig ./tsconfig-typedoc.json && atma task copy",

        "watch": "app-bundler --watch",
        "server": "atma server",
        "release": "echo \"Run atma pub -m \"message\"\""
    },
    "license": "MIT",
    "app-bundler": {
        "file": "src/export.ts",
        "outputMain": "lib/alot.js",
        "package": {
            "module": "commonjs",
            "moduleName": "alot",
            "moduleWrapper": "umd",
            "commonjs": {
                "output": "simplified"
            }
        },
        "extensions": {
            "io": {
                "type": "js"
            }
        },
        "defaultExtensions": {
            "js": "ts"
        },
        "middlewares": {
            "ts": [
                "atma-loader-ts:read"
            ]
        }
    },
    "atma": {
        "plugins": [
            "atma-loader-ts"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                },
                "lazy": {
                    "src/AlotProto.ts": [
                        "streams/*"
                    ]
                }
            },
            "atma-loader-ts": {
                "extensions": [
                    "test",
                    "ts"
                ],
                "typescript": {
                    "compilerOptions": {
                        "#if (TEST)": {
                            "module": "AMD"
                        }
                    }
                }
            }
        },
        "tasks": {
            "copy": {
                "files": {
                    "./assets/background.png": "./docs/assets/background.png"
                }
            }
        }
    }
}
